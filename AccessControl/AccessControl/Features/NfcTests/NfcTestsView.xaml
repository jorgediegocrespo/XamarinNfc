<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessControl.Features.NfcTestsView">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0" Margin="0,0,0,20">
            <Label Text="Nfc tests" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnDiscover" Text="Discover card" Clicked="btnDiscover_Clicked" Margin="20,0"/>
        <Button x:Name="btnRead" Text="Read NFC" Clicked="btnRead_Clicked" Margin="20,0"/>

        <Button x:Name="btnWriteText" Text="Write text" Clicked="btnWriteText_Clicked" Margin="20,0"/>
        <Button x:Name="btnWriteUri" Text="Write Uri" Clicked="btnWriteUri_Clicked" Margin="20,0"/>
        <Button x:Name="btnWriteMime" Text="write mime" Clicked="btnWriteMime_Clicked" Margin="20,0"/>

        <Button x:Name="btnClean" Text="Clean NFC" Clicked="btnClean_Clicked" Margin="20,0"/>

        <Label x:Name="lbState" Text="Waiting..." HorizontalTextAlignment="Center"/>
    </StackLayout>

</ContentPage>
