<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccessControl.Features.AccessControlView">

    <StackLayout Padding="20">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0" Margin="-20, -20, -20, 20">
            <Label Text="Access control" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label x:Name="lbNif" />
        <Label x:Name="lbName" />
        <Label x:Name="lbSurname" />
        <Label x:Name="lbInfo" />

        <Label x:Name="lbStatus"
               Text="Bring your card closer to the reader to access"
               HorizontalOptions="Center" FontSize="20"
               TextColor="Black"/>
    </StackLayout>

</ContentPage>
